# Staging Environment Configuration

# Environment
APP_ENV=staging

# Database
DATABASE_URL=postgres://chatuser:CHANGE_THIS_PASSWORD@staging-db-host:5432/chatdb_staging

# JWT Configuration
JWT_SECRET=CHANGE-THIS-TO-SECURE-RANDOM-STRING-MIN-32-CHARS
JWT_EXPIRATION_HOURS=12

# Server
HOST=0.0.0.0
PORT=3002

# WebSocket
MAX_WS_CONNECTIONS=500

# CORS (comma-separated list of allowed origins)
CORS_ORIGINS=https://staging.example.com,https://app-staging.example.com

# Logging
RUST_LOG=info
ENABLE_LOGGING=true

# Redis Cache Configuration
REDIS_URL=redis://staging-redis-host:6379/0
REDIS_CACHE_TTL=1800
ENABLE_REDIS=true
